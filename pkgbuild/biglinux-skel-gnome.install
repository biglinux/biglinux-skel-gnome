## arg 1:  the new package version
post_install() {
	# Execute the big-gdm-greeter script
	bash /usr/share/libalpm/scripts/big-gdm-greeter
	
	# Desativar a montagem autom√°tica de dispositivos
	gsettings set org.gnome.desktop.media-handling automount false
}

## arg 2:  the old package version
post_upgrade() {
	post_install
}
