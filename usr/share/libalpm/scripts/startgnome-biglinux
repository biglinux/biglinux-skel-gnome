#!/usr/bin/env bash

# Replace gnome-session with startgnome-biglinux
sed -i 's|^Exec=/usr/bin/gnome-session|Exec=/usr/bin/startgnome-biglinux|g' /usr/share/xsessions/gnome.desktop /usr/share/xsessions/gnome-classic.desktop /usr/share/wayland-sessions/gnome-classic.desktop /usr/share/wayland-sessions/gnome-wayland.desktop
